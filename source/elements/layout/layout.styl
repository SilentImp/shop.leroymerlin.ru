@import "../../helpers/*"

html, body
  overflow-x hidden
  font-family Arial, Helvetica, sans-serif
  background-color $light-grey

  a
    color $light-green


.main
  min-height calc( 100vh - 60px )
  overflow-x hidden
  position relative
  .wrap
    overflow visible
    width 1220px
    margin 0 auto

@media (max-width: 1220px)
  html body .main
    .wrap
      width auto
      margin 0 20px
