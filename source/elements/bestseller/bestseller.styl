@import "../../helpers/*"

.bestseller
  position relative
  width 1220px
  ovwerflow hidden
  font-family Arial, Helvetica, sans-serif
  .slick-arrow
    z-index 2
    background-color rgba($green, .25)
    cursor pointer
    border 1px solid $green
    padding 0
    margin 0
    position absolute
    top 0
    bottom 0
    margin auto
    width 58px
    height 58px
    border-radius 100%
    font-size 0
    transition background-color .25s, transform .25s
    transform scale(1, 1)
    &:hover
      transform scale(.9, .9)
      background-color rgba($green, 1)
      color $white

  .slick-next
    right 10px
    &:after
      icon('\e802')
      font-size 18px
  .slick-prev
    left 10px
    &:after
      icon('\e801')
      font-size 18px
  &__wrapper
    white-space nowrap
    font-size 0
    overflow hidden
    max-wdith 100%
  &__item
    width 395px
    height 400px
    display inline-block
    vertical-align top
    margin 0 16.3px 0 0
    white-space normal
    text-decoration none
    background-color $white
    transform scale(1, 1)
    opacity 1
    transition transform .25s, opacity .25s
    &:hover
      transform scale(.9, .9)
      opacity .6
    &-photo
      display block
      height 325px
      width 100%
    &-details
      margin 0 20px
      border-top 1px solid $dark-white
      padding 15px 0
    &-title
      font-weight bold
      font-size 18px
      line-height 22px
      color $green
    &-abstract
      font-size 14px
      line-height 22px
      color $grey
