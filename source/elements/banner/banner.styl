@import "../../helpers/*"

.banner
  position relative
  background $green url('../images/banner-bg.jpg') 50% 50% no-repeat
  background-size cover
  color $white
  padding 25px 25px 35px
  margin  20px 0 30px
  text-align center
  display block
  text-decoration none
  font-family Arial, Helvetica, sans-serif
  &__title
    font-weight bold
    font-size 50px
    line-height 64px
    text-transform uppercase
    color $white
  &__text
    font-size 22px
    line-height 28px
    max-width 800px
    margin 0 auto
    color $white
